<h1>Listado de usuarios</h1>

<table>
  <thead>
    <tr>
			<th>Nombre</th>
      <th>Email</th>
      <th>Cuenta</th>
      <th>Telefono</th>
      <th>Informacion Adicional</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.where.not(id: current_user.id).each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.cuenta %></td>
        <td><%= user.telefono %></td>
        <td><%= user.informacion_adicional %></td>
        <!--<td><%= link_to 'Mostrar', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>-->
       </tr>
    <% end %>
  </tbody>
</table>

<br>

